extends layout


block content
  nav
    form(name="filter",method="post",action="/")
          div.input
            span.label Nom
            input(type="text",name="name",value= name)
          div.input
            span.label Minimum
            input(type="number",name="min",value= min)
            span.label Maximum
            input(type="number",name="max",value= max)
          div.input
            span.label Classe
              select(id="Classe", name="classe")
                option(value= classe) #{classe}
                option(value="") Toutes
                option(value="Etoile") Etoile
                option(value="Planète") Planète
                option(value="Satellite de planète") Satellite de planète
                option(value="Astéroïde") Astéroïde
                option(value="Centaure. Troyen") Centaure. Troyen
                option(value="Comète") Comète
                option(value="Transneptunien") Transneptunien
                option(value="Satellite transneptunien") Satellite transneptunien
          div.input
            input(type="submit",name="submit",value="filtrer")
  article
    section
      if object.lienObjet
        h1.nom 
          a(href= "https://fr.wikipedia.org" + object.lienObjet ) #{object["Nom"]}
      else
        h1.nom #{object.Nom}
      if object.Photo
        img(src= object.Photo, alt="")
      p Classe: #{object.Classe}
      p Numéro d'ordre:  #{object["Numéro d'ordre"]}
      if object.LienType
        p Type: 
          a(href= "https://fr.wikipedia.org" + object.LienType ) #{object["Type"]}
      else
        p Type: #{object["Type"]}
      p Diamètre équatoriale: #{object['Diamètre équatoriale']}
      p Masse: #{object.Masse}
      p demi-grand axe: #{object["demi-grand axe"]}
      p périhélie: #{object["périhélie"]}
      p aphélie: #{object["aphélie"]}
      p excentricité orbitale: #{object["excentricité orbitale"]}
      p magnitude absolue: #{object["magnitude absolue"]}
      p magnitude apparente: #{object["magnitude apparente"]}
  
